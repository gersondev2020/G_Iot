<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20px">

            <TextView
                android:id="@+id/textItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:gravity="center"
                android:text="Item"
                android:textColor="@color/colorBtn"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto de Exibição:"
                android:textColor="@color/colorBtn"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize"
                android:theme="@style/MyEditTextTheme" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tag que Deseja Ler:"
                android:textColor="@color/colorBtn"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/SpinnerTag"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textSize="@dimen/textSize"
                android:theme="@style/MySpinnTheme" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unidade:"
                        android:textColor="@color/colorBtn"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/editUnidade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize"
                        android:theme="@style/MyEditTextTheme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Qtd dígitos:"
                        android:textColor="@color/colorBtn"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/editQtddig"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize"
                        android:theme="@style/MyEditTextTheme" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Valor Máximo:"
                        android:textColor="@color/colorBtn"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/editValormax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize"
                        android:theme="@style/MyEditTextTheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Valor Mínimo:"
                        android:textColor="@color/colorBtn"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/editValormin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberSigned"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize"
                        android:theme="@style/MyEditTextTheme" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantidades de Itens na tela, máximo 30 Itens:"
                    android:textColor="@color/colorBtn"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/qtdItemsNatela"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize"
                    android:theme="@style/MyEditTextTheme" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>